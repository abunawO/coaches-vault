<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for(:title) || "Myvault" %></title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="application-name" content="Myvault">
    <meta name="mobile-web-app-capable" content="yes">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= yield :head %>

    <%# Enable PWA manifest for installable apps (make sure to enable in config/routes.rb too!) %>
    <%#= tag.link rel: "manifest", href: pwa_manifest_path(format: :json) %>

    <link rel="icon" href="/icon.png" type="image/png">
    <link rel="icon" href="/icon.svg" type="image/svg+xml">
    <link rel="apple-touch-icon" href="/icon.png">

    <%# Includes all stylesheet files in app/assets/stylesheets %>
    <%= stylesheet_link_tag :app, "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <header class="nav">
      <div class="nav-left">
        <% if logged_in? %>
          <% if current_user.student? %>
            <%= link_to "Coaches", coaches_path, class: nav_link_class(coaches_path) %>
            <%= link_to "Dashboard", root_path, class: nav_link_class(root_path) %>
            <%= link_to "Search", search_path, class: nav_link_class(search_path) %>
            <%= link_to "Subscriptions", subscriptions_path, class: nav_link_class(subscriptions_path) %>
            <%= link_to "Favorites", favorites_path, class: nav_link_class(favorites_path) %>
            <%= link_to notifications_label, notifications_path, class: nav_link_class(notifications_path) %>
          <% elsif current_user.coach? %>
            <%= link_to "Dashboard", root_path, class: nav_link_class(root_path) %>
            <%= link_to "My Lessons", lessons_path, class: nav_link_class(lessons_path) %>
            <%= link_to notifications_label, notifications_path, class: nav_link_class(notifications_path) %>
          <% end %>
        <% else %>
          <%= link_to "Coaches", coaches_path, class: nav_link_class(coaches_path) %>
          <%= link_to "Search", search_path, class: nav_link_class(search_path) %>
          <%= link_to "Login", login_path, class: nav_link_class(login_path) %>
        <% end %>
      </div>
      <div class="nav-right">
        <% if logged_in? %>
          <span>Logged in as <%= current_user.email %> (<%= current_user.role %>)</span>
          <%= button_to "Logout", logout_path, method: :delete, form: { class: "inline-form" } %>
        <% else %>
          <%= link_to "Login", login_path %>
        <% end %>
      </div>
    </header>

    <% flash.each do |type, message| %>
      <div class="flash flash-<%= type %>"><%= message %></div>
    <% end %>

    <main class="page">
      <%= yield %>
    </main>
  </body>
</html>
