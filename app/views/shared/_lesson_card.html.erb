<div class="card lesson-card">
  <div class="card-header">
    <div>
      <div class="badge <%= locked ? "badge-locked" : "badge-open" %>"><%= locked ? "Locked" : "Unlocked" %></div>
      <h3 class="card-title"><%= lesson.title %></h3>
      <p class="muted">by <%= coach_display_name %></p>
    </div>
  </div>
  <% if lesson.description.present? %>
    <p class="muted"><%= truncate(lesson.description, length: 140) %></p>
  <% end %>
  <div class="card-actions">
    <% if locked %>
      <%= link_to "Subscribe to unlock", locked_path, class: "btn secondary" %>
    <% else %>
      <%= link_to "Open", open_path, class: "btn" %>
    <% end %>
  </div>
</div>
