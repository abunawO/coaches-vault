<div class="modal-backdrop" data-confirm-modal-target="dialog" hidden data-action="click->confirm-modal#backdrop">
  <div class="modal" role="dialog" aria-modal="true" aria-labelledby="confirm-modal-title">
    <div class="modal-header">
      <h3 id="confirm-modal-title" data-confirm-modal-target="title">Confirm</h3>
      <button type="button" class="modal-close" data-confirm-modal-target="cancelButton" data-action="confirm-modal#close" aria-label="Close">Ã—</button>
    </div>
    <div class="modal-body">
      <p class="muted" data-confirm-modal-target="body">Are you sure?</p>
      <form data-confirm-modal-target="form" method="post">
        <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
        <input type="hidden" name="_method" data-confirm-modal-target="methodField" value="">
        <div class="modal-actions">
          <button type="button" class="btn btn-secondary" data-action="confirm-modal#close" data-confirm-modal-target="cancelButton">Cancel</button>
          <input type="submit" class="btn btn-primary" data-confirm-modal-target="confirmButton" value="Confirm" />
        </div>
      </form>
    </div>
  </div>
</div>
