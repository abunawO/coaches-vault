<div class="container auth-page">
  <div class="page-header">
    <div>
      <h1 class="page-title">Log in</h1>
      <p class="page-subtitle">Access your vault and subscriptions.</p>
    </div>
  </div>

  <div class="card auth-card">
    <%= form_with url: login_path, method: :post, local: true do |form| %>
      <div class="form-row">
        <%= form.label :email %>
        <%= form.email_field :email, required: true, autofocus: true, class: "input" %>
      </div>

      <div class="form-row">
        <%= form.label :password %>
        <%= form.password_field :password, required: true, class: "input" %>
      </div>

      <div class="card-actions">
        <%= form.submit "Log in", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
