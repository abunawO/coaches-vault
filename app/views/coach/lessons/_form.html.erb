<%= form_with model: [:coach, @lesson], local: true do |form| %>
  <div>
    <%= form.label :title %><br>
    <%= form.text_field :title, required: true %>
  </div>

  <div>
    <%= form.label :description %><br>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :video_url %><br>
    <%= form.text_field :video_url, required: true %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
