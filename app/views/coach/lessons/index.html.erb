<div class="container">
  <div class="page-header">
    <h1>Your Lessons</h1>
  </div>

  <div class="card-actions" style="margin-bottom: 12px;">
    <%= link_to "New Lesson", new_coach_lesson_path, class: "btn" %>
  </div>

  <div class="grid">
    <% @lessons.each do |lesson| %>
      <div class="card">
        <h3 class="card-title"><%= lesson.title %></h3>
        <% if lesson.description.present? %>
          <p class="muted"><%= truncate(lesson.description, length: 140) %></p>
        <% end %>
        <div class="card-actions">
          <%= link_to "Edit", edit_coach_lesson_path(lesson), class: "btn secondary" %>
          <%= button_to "Delete", coach_lesson_path(lesson), method: :delete, form: { data: { turbo_confirm: "Are you sure?" } }, class: "btn secondary" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
