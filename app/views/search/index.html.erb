<div class="page-container">
  <div class="search-header" style="text-align: center;">
    <h1 class="page-title">Search</h1>
    <p class="page-subtitle">Find coaches, lessons, and techniques.</p>
  </div>

  <%= form_with url: search_path, method: :get, data: { turbo_frame: "search_results", controller: "live-search", action: "input->live-search#changed" }, html: { class: "search-bar" } do |form| %>
    <%= form.text_field :q, value: @query, placeholder: "Search lessons, coaches, techniquesâ€¦", class: "input search-input", autocomplete: "off", autofocus: true, data: { live_search_target: "input" } %>
    <%= form.submit "Search", class: "btn btn-primary" %>
  <% end %>

  <turbo-frame id="search_results">
    <%= render "results", lesson_cards: @lesson_cards, query: @query %>
  </turbo-frame>
</div>
