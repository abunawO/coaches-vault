<div class="auth-page">
  <div class="auth-card">
    <div class="auth-brand">
      <span class="auth-brand__mark"></span>
      <span class="auth-brand__name">MyVault</span>
    </div>
    <h1 class="auth-title">Check your email</h1>
    <p class="auth-subtitle">We sent a verification link to <%= @email.presence || "your inbox" %>.</p>

    <%= form_with url: resend_verification_email_path, method: :post, local: true do %>
      <%= hidden_field_tag :email, @email if @email.present? %>
      <% unless @email.present? %>
        <div class="form-row">
          <label for="resend-email">Email</label>
          <%= email_field_tag :email, nil, required: true, class: "input", id: "resend-email", placeholder: "you@example.com" %>
        </div>
      <% end %>
      <div class="auth-actions">
        <button type="submit" class="btn btn-primary auth-submit">Resend verification email</button>
      </div>
    <% end %>

    <div class="auth-footer">
      <%= link_to "Back to login", login_path %>
    </div>
  </div>
</div>
